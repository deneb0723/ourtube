extends layouts/main

block content
    .form-container
        form(action=`/users${routes.changePassword}`, method="post")
            input(type="password", name="oldPassword", placeholder="현재 비밀번호를 입력하세요.")
            input(type="password", name="newPassword", placeholder="새로운 비밀번호를 입력하세요.")
            input(type="password", name="newPassword1", placeholder="비밀번호를 한번 더 입력하세요.")
            input(type="submit", value="비밀번호 변경하기") 