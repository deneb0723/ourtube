extends layouts/main

block content
    .form-container
        form(action=routes.join, method="post")
            input(type="text", name="name", placeholder="닉네임을 입력하세요", required=true)
            input(type="email", name="email", placeholder="이메일 주소를 입력하세요", required=true)
            input(type="password", name="password", placeholder="비밀번호를 입력하세요", required=true)
            input(type="password", name="password2", placeholder="비밀번호를 한 번 더 입력해주세요", required=true)
            input(type="submit", value="가입하기")
        include partials/socialLogin

