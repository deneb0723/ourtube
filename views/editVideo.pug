extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.editVideo}`, method="post")
            input(type="text", placeholder="Title", name="제목")
            textarea(name="description", placeholder="설명")
            input(type="submit", value="비디오 수정하기")
        a.form-container__link.form-container__link--delete(href=`/videos${routes.deleteVideo}`) 비디오 삭제하기